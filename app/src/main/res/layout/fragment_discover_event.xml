<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.teeterpal.teeter.EventsActivity_tabhost$PlaceholderFragment">


    <RadioGroup
        android:id="@+id/button_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:layout_marginBottom="10dp">

        <RadioButton
            android:id="@+id/time_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:text="Time"
            android:textAllCaps="false"
            android:background="@drawable/discover_event_filter_selector"
            style="?android:borderlessButtonStyle"/>

        <RadioButton
            android:id="@+id/location_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:text="Location"
            android:textAllCaps="false"
            android:background="@drawable/discover_event_filter_selector"
            style="?android:borderlessButtonStyle"/>

        <RadioButton
            android:id="@+id/popularity_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:text="Popularity"
            android:textAllCaps="false"
            android:background="@drawable/discover_event_filter_selector"
            style="?android:borderlessButtonStyle"/>

    </RadioGroup>

    <ListView
        android:id="@+id/discover_event_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/button_ll"
        android:divider="@color/divider_color"
        android:dividerHeight="2dp"/>

</RelativeLayout>
