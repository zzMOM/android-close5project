<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.teeterpal.androidteeterpal.ProfileFragment"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <com.makeramen.RoundedImageView
        android:id="@+id/profile_rounded_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ic_local_see_grey600_48dp"
        app:riv_corner_radius="100dp"
        app:riv_border_width="2dip"
        app:riv_border_color="@color/light_gray"
        app:riv_mutate_background="true"
        app:riv_oval="true"
        android:scaleType="center"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/nickname_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Nickname"
            android:textSize="22sp"/>

        <EditText
            android:id="@+id/nickname_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/nickname_text_view"
            android:layout_toEndOf="@id/nickname_text_view"
            android:gravity="end"
            android:textSize="22sp"
            android:background="#00000000"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            android:background="@color/light_gray"
            android:layout_below="@id/nickname_text_view"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/zipcode_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Zipcode"
            android:textSize="22sp"/>

        <EditText
            android:id="@+id/zipcode_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/zipcode_text_view"
            android:layout_toEndOf="@id/zipcode_text_view"
            android:gravity="end"
            android:textSize="22sp"
            android:background="#00000000"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            android:background="@color/light_gray"
            android:layout_below="@id/zipcode_text_view"/>

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Add more kid's info"
            android:textSize="25sp"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_add_grey600_36dp"
            style="?android:attr/borderlessButtonStyle"/>
    </RelativeLayout>

</LinearLayout>
